<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="center"
    tools:context="madelyntav.c4q.nyc.memeproject.MainActivity"
    android:background="@drawable/redb2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meme-ify Me!"
        android:layout_centerHorizontal="true"
        android:textSize="55dp"
        android:textStyle="bold|italic"
        android:id="@+id/header"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:textSize="19dp"
        android:text="      Welcome to Meme-ify Me, the app that lets you create your own memes! "/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_marginTop="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cam"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:onClick="takePic"/>

        <TextView
            android:id="@+id/takePic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take New Photo"
            android:onClick="takePic"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:textSize="19dp"/>

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/folder"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:onClick="usePic"/>

        <TextView
            android:id="@+id/loadImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Photo From Album"
            android:onClick="usePic"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:textSize="19dp"/>

        <ImageView
            android:id="@+id/memeList"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:onClick="chooseMeme"
            android:paddingTop="20dp"
            android:src="@drawable/templatememeicon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Choose A Meme From Template"
            android:textSize="20sp"/>

    </LinearLayout>

</RelativeLayout>



